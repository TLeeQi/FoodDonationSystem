<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="430.0" prefWidth="600.0"
            style="-fx-background-color:#FDF2E9;"
            xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.fooddonationsystem.DeleteRecipientFromItemController">

    <top>
        <HBox spacing="12" alignment="CENTER_LEFT">
            <padding><Insets top="12" right="16" bottom="0" left="16"/></padding>
            <Label text="Remove Assignment" style="-fx-font-size:16px; -fx-font-weight:bold;"/>
            <Pane HBox.hgrow="ALWAYS"/>
            <ComboBox fx:id="donation" prefWidth="220" onAction="#onDonationChange"
                      promptText="Select Donation"/>
        </HBox>
    </top>

    <center>
        <VBox spacing="8">
            <padding><Insets top="10" right="16" bottom="0" left="16"/></padding>

            <Label text="Current Assignments"/>
            <TableView fx:id="assignmentsTable" prefHeight="160">
                <columns>
                    <TableColumn fx:id="colItemId" text="Item ID" prefWidth="70"/>
                    <TableColumn fx:id="colItemName" text="Item Name" prefWidth="180"/>
                    <TableColumn fx:id="colRecipientId" text="Recipient ID" prefWidth="90"/>
                    <TableColumn fx:id="colRecipientName" text="Recipient Name" prefWidth="150"/>
                    <TableColumn fx:id="colQty" text="Qty" prefWidth="50"/>
                    <TableColumn fx:id="colDate" text="Date" prefWidth="90"/>
                </columns>
            </TableView>

            <Separator/>

            <GridPane hgap="10" vgap="8">
                <columnConstraints>
                    <ColumnConstraints percentWidth="25"/>
                    <ColumnConstraints percentWidth="75"/>
                </columnConstraints>

                <Label text="Item ID" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="itemIdField" promptText="e.g. 12"
                           GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Recipient ID" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="recipientID" promptText="e.g. 1"
                           GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <HBox spacing="8" GridPane.rowIndex="2" GridPane.columnIndex="1">
                    <Button text="Remove" onAction="#deleteRecipientFromItem"
                            style="-fx-background-color:#1D77C7; -fx-text-fill:white;"/>
                    <Button text="Clear" onAction="#clear"
                            style="-fx-background-color:#880808; -fx-text-fill:white;"/>
                </HBox>
            </GridPane>

            <Label fx:id="wrongDeleteRecipientFromItem"/>
        </VBox>
    </center>
</BorderPane>
