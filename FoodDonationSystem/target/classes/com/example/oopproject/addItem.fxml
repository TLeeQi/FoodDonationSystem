<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="560.0" prefWidth="600.0" style="-fx-background-color: #FDF2E9;"
            xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.oopproject.AddItemController">

   <left>
      <AnchorPane prefHeight="560.0" prefWidth="601.0" BorderPane.alignment="CENTER">
         <children>

            <!-- Header + CATEGORY filter -->
            <Label layoutX="257.0" layoutY="21.0" text="Add Donation Item" />
            <ComboBox fx:id="donation" layoutX="420.0" layoutY="17.0" onAction="#displayItem"
                      prefHeight="15.0" prefWidth="160.0" promptText="Filter: Category" />

            <!-- Table of existing items (smaller height) -->
            <Label layoutX="42.0" layoutY="50.0" text="Existing Items" />
            <TableView fx:id="itemsTable" layoutX="42.0" layoutY="72.0"
                       prefHeight="130.0" prefWidth="520.0">
               <columns>
                  <TableColumn fx:id="colId" text="ID" prefWidth="120.0" />
                  <TableColumn fx:id="colName" text="Item Name" prefWidth="180.0" />
                  <TableColumn fx:id="colCategory" text="Category" prefWidth="140.0" />
                  <TableColumn fx:id="colStock" text="Stock" prefWidth="80.0" />
               </columns>
            </TableView>

            <!-- subtle divider below the table -->
            <Separator layoutX="42.0" layoutY="210.0" prefWidth="520.0"/>

            <!-- (Kept for backward-compat) Original TextArea; hidden -->
            <TextArea fx:id="item" wrapText="true" editable="false"
                      layoutX="42.0" layoutY="72.0" prefHeight="127.0" prefWidth="515.0"
                      visible="false" managed="false"/>

            <!-- Form area (moved up to reduce bottom gap) -->
            <Label layoutX="44.0" layoutY="230.0" text="Item Category" />
            <RadioButton fx:id="beverage" layoutX="152.0" layoutY="230.0"
                         mnemonicParsing="false" selected="true" text="Beverage">
               <toggleGroup>
                  <ToggleGroup fx:id="itemType" />
               </toggleGroup>
            </RadioButton>
            <RadioButton fx:id="fruit" layoutX="265.0" layoutY="230.0"
                         mnemonicParsing="false" text="Fruit" toggleGroup="$itemType" />

            <!-- Item Name -->
            <Label layoutX="44.0" layoutY="262.0" text="Item Name" />
            <TextField fx:id="itemNameField" layoutX="152.0" layoutY="258.0"
                       promptText="e.g. Bottled Water" prefWidth="260.0"/>

            <!-- Stock -->
            <Label layoutX="44.0" layoutY="294.0" text="Stock" />
            <TextField fx:id="itemNumber" layoutX="152.0" layoutY="290.0"
                       promptText="e.g. 100" prefWidth="120.0" />

            <Button fx:id="additem" layoutX="156.0" layoutY="332.0"
                    mnemonicParsing="false" onAction="#addItem"
                    style="-fx-background-color: #1D77C7;" text="Add" textFill="ffffff" />
            <Button fx:id="clear" layoutX="213.0" layoutY="332.0"
                    mnemonicParsing="false" onAction="#clear"
                    style="-fx-background-color: #880808;" text="Clear" textFill="ffffff" />

            <Label fx:id="wrongAddItem" layoutX="156.0" layoutY="368.0"
                   prefHeight="19.0" prefWidth="404.0" />

         </children>
      </AnchorPane>
   </left>
</BorderPane>
